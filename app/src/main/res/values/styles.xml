<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Item Card Style -->
    <style name="ItemStyle">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <!-- TextInput Style -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="cornerRadius">@dimen/view_radius</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/view_radius</item>
        <item name="android:layout_height">@dimen/view_height</item>
    </style>

</resources>
